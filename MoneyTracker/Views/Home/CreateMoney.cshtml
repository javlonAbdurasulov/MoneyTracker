@using MoneyTracker.Domain.Models
@{
    Layout = "/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container">
    <h1>Add a New Transaction</h1>

    <!-- Форма для добавления новой транзакции -->
    <form method="post" action="/Home/AddTransaction" class="add-transaction-form">
        <div class="input-group">
            <label for="date">Date</label>
            <input type="date" id="date" name="Date" required>
        </div>

        <div class="input-group">
            <label for="category">Category</label>
            <select id="category" name="Category" required>
                <option value="Income">Income</option>
                <option value="Expense">Expense</option>
            </select>
        </div>

        <div class="input-group">
            <label for="price">Amount</label>
            <input type="number" id="price" name="Price" step="0.01" placeholder="Enter amount" required>
        </div>

        <div class="input-group">
            <label for="comment">Comment</label>
            <input type="text" id="comment" name="Comment" placeholder="Enter a comment" required>
        </div>

        <button type="submit" class="submit-btn">Add Transaction</button>
    </form>

    <!-- Вывод таблицы с текущими транзакциями -->
    <h2>Current Transactions</h2>
    <table class="transactions-table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Category</th>
                <th>Price</th>
                <th>Comment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model.Transactions)
            {
                <tr>
                    <td>@transaction.Date.ToString("yyyy-MM-dd")</td>
                    <td>@transaction.Category</td>
                    <td>@transaction.Price.ToString("C")</td>
                    <td>@transaction.Comment</td>
                    <td>
                        <button class="action-btn update-btn">Update</button>
                        <button class="action-btn delete-btn">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
