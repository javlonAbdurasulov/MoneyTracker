@using MoneyTracker.Domain.Models
@{
    Layout = "/Views/Shared/_CreateMoneyLayout.cshtml";
}

<div class="container">
    <h1>Add a New Transaction</h1>

    <form method="post" asp-action="AddTransactions" asp-controller="Home" class="add-transaction-form">
        <div class="input-group">
            <label for="date">Date</label>
            <input type="date" id="date" name="Date" required>
        </div>

        <div class="input-group">
            <label for="category">Category</label>
            <select id="category" name="IsIncome" required>
                <option value="true">Income</option>
                <option value="false">Expense</option>
            </select>
        </div>
        //---------------
        <div class="filter-group">
            <label for="subcategory">Subcategory</label>
            <select id="subcategory" name="CategoryId">
                <!-- Options will be dynamically populated based on the selected category -->
            </select>
        </div>

        <div class="input-group">
            <label for="price">Amount</label>
            <input type="number" id="price" name="Amount" step="0.01" placeholder="Enter amount" required>
        </div>

        <div class="input-group">
            <label for="comment">Comment</label>
            <input type="text" id="comment" name="Comment" placeholder="Enter a comment" required>
        </div>
            <input type="hidden"  name="DefaultFilter" value="true" required>
            <input type="hidden"  name="UserId" value="@Model.UserId" required>
            <input type="hidden"  name="UserName" value="@Model.UserName" required>
        
        <button type="submit" class="submit-btn">Add Transaction</button>
    </form>

</div>
